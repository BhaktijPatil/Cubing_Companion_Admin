<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/roundDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/roundId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Round ID"
        android:textColor="@color/textSecondary"
        app:layout_constraintEnd_toEndOf="@+id/qualifyingCriteria"
        app:layout_constraintStart_toStartOf="@+id/qualifyingCriteria"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/qualifyingCriteria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Participant Count"
        android:textColor="@color/textSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundId" />

    <TextView
        android:id="@+id/roundStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Start Time : "
        android:textColor="@color/textSecondary"
        app:layout_constraintStart_toStartOf="@+id/qualifyingCriteria"
        app:layout_constraintTop_toBottomOf="@+id/qualifyingCriteria" />

    <TextView
        android:id="@+id/roundEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="End Time : "
        android:textColor="@color/textSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/roundStart"
        app:layout_constraintStart_toStartOf="@+id/qualifyingCriteria"
        app:layout_constraintTop_toBottomOf="@+id/roundStart" />

    <TextView
        android:id="@+id/roundStartTime"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="00:00"
        android:textColor="@color/textSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/roundStart"
        app:layout_constraintEnd_toEndOf="@+id/qualifyingCriteria"
        app:layout_constraintStart_toEndOf="@+id/roundStart"
        app:layout_constraintTop_toTopOf="@+id/roundStart" />

    <TextView
        android:id="@+id/roundEndTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light"
        android:text="00:00"
        android:textColor="@color/textSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/roundEnd"
        app:layout_constraintEnd_toEndOf="@+id/qualifyingCriteria"
        app:layout_constraintStart_toEndOf="@+id/roundEnd"
        app:layout_constraintTop_toBottomOf="@+id/roundStartTime" />
</androidx.constraintlayout.widget.ConstraintLayout>