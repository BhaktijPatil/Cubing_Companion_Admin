<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:tint="#D9414141"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/background_10" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/abel"
                android:text="Round Editor"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/roundId"
                app:layout_constraintStart_toStartOf="@+id/roundId"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/roundId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-light"
                android:hint="Round No."
                android:inputType="number"
                android:textColor="@color/textSecondary"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/participantCount"
                app:layout_constraintStart_toStartOf="@+id/participantCount"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <EditText
                android:id="@+id/participantCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-light"
                android:hint="Qualification criteria"
                android:inputType="number"
                android:textColor="@color/textSecondary"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roundId" />

            <TextView
                android:id="@+id/roundStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Round Start Time :"
                android:textColor="@color/textSecondary"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/roundStartTime"
                app:layout_constraintEnd_toStartOf="@+id/roundStartTime"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/roundId"
                app:layout_constraintTop_toTopOf="@+id/roundStartTime" />

            <TextView
                android:id="@+id/roundEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Round End Time :"
                android:textColor="@color/textSecondary"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/roundEndTime"
                app:layout_constraintEnd_toStartOf="@+id/roundEndTime"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/roundStart"
                app:layout_constraintTop_toBottomOf="@+id/roundStartTime" />

            <Button
                android:id="@+id/addRoundButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/colorAccent"
                android:fontFamily="@font/abel"
                android:text="Add Round"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/participantCount"
                app:layout_constraintTop_toBottomOf="@+id/roundEndTime" />

            <Button
                android:id="@+id/roundStartTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#807F7F"
                android:fontFamily="@font/abel"
                android:text="Select"
                android:textColor="@color/textSecondary"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/participantCount"
                app:layout_constraintTop_toBottomOf="@+id/participantCount" />

            <Button
                android:id="@+id/roundEndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#807F7F"
                android:fontFamily="@font/abel"
                android:text="Select"
                android:textColor="@color/textSecondary"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/participantCount"
                app:layout_constraintTop_toBottomOf="@+id/roundStartTime" />

            <Button
                android:id="@+id/deleteRoundButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:fontFamily="@font/abel"
                android:text="Delete"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/addRoundButton"
                app:layout_constraintEnd_toEndOf="@+id/roundId"
                app:layout_constraintTop_toTopOf="@+id/addRoundButton" />

            <Button
                android:id="@+id/scramblesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:fontFamily="@font/abel"
                android:text="Scrambles"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/addRoundButton"
                app:layout_constraintEnd_toStartOf="@+id/deleteRoundButton"
                app:layout_constraintStart_toEndOf="@+id/addRoundButton"
                app:layout_constraintTop_toTopOf="@+id/addRoundButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>